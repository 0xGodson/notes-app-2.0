<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome</title>
    <link href="/public/bootstrap.min.css" rel="stylesheet">
    <link href="/challenge/style.css" rel="stylesheet">
    <script src="/challenge/app.js" defer></script>
</head>

<body className="snippet-body">
    <br>
    <div class="container alert alert-success" role="alert" id="main" hidden>
    </div>
    <div class="container alert alert-danger" role="alert" id="main" hidden>
    </div></br>
    <div class="container" name="notes" id="main">
        <div style="padding:2vw">
            <div class="row" id="theme-update" style="width:auto">
                <div class="col my-5">
                    <div class="row text-center px-3 mb-3" style="display:block">
                        <img id="app-logo" src="/challenge/noteico.png">
                    </div>
                    <div class="row px-3 mb-3 text-center" style="display:block">
                        <h2 class="mb-5 heading">Incomplete Secure Notes Application 2.0 üíÄ</h2>
                    </div>
                    <h3 id="msg-info" class="msg-info">Your Notes!</h3>

                    <ul>
                        <% if (typeof notes !=="undefined" ) { %>
                            <% for (i in notes){%>
                                <li><a href="/note/<%=notes[i]['noteId']%>?id=<%=notes[i]['noteId']%>">
                                        <%=notes[i]["title"]%>
                                    </a></li>
                                <% } %>
                                    <br><br><br>
                                    <a id='create-note' href='/create'><b>Create a New Note </b></a> ‚úçÔ∏è
                                    <%} else { %>
                                        <br>
                                        <script src='/challenge/notes.js'></script>
                                        <% } %>
                    </ul>

                </div>
            </div>
        </div>
    </div>

</body>

</html>

